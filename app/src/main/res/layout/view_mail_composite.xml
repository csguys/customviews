<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvNameTag"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:text="P"
        android:gravity="center"
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_toEndOf="@+id/tvNameTag"
        android:layout_width="wrap_content"
        android:layout_toStartOf="@+id/mail_date"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
        <TextView
            android:text="Paytm"
            android:id="@+id/tvSubject"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Your Recharge of airtel is successfull"
            android:id="@+id/tvHead"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Transaction id 21HJABD455DA7 on your mail"
            android:id="@+id/tvContent"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/mail_date"
        android:text="13 Dec"
        android:textStyle="bold"
        android:textColor="#3e71df"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ivStarred"
        android:layout_width="wrap_content"
        android:layout_below="@+id/mail_date"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/btn_star"/>
</RelativeLayout>